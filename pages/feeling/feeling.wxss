/**index.wxss**/
.container{
  background-color: #ededed;
}
.container-top{
  width: 100%;
  height: 445rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 27rpx 35rpx 24rpx 23rpx;
  font-size: 16px;
  margin-top:14rpx;
  background-color: #fff;
}

.say-textarea{
  width:100%;
}

.say{
  text-align: right;
  font-size: 14px;
  line-height: 50rpx;
}
.say-want{
  margin-right: 15rpx;
}

.say-img{
  width:50rpx;
  height: 50rpx;
  vertical-align: middle;
}

/*语音的样式*/
.push-wrap{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top:60rpx;
}
.push{
  width: 230rpx;
  height:230rpx;
  background-color: #ffdc1e;
  border-radius: 50%;
  border: 1px solid #000;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.push-time{
  font-size: 25px;
}

.push-say{
  font-size: 14px;
}



/*可滚动区域的样式*/
.scroll-content{
  box-sizing: border-box;
  flex-grow:1;
  flex-shrink:0;
  background-color: #ededed;
}

.scroll-content-inner{
  padding: 37rpx 23rpx;
}
.scroll-content-innerWrap{
  line-height: 138rpx;
}
.camera-img, .item-img{
  width: 138rpx;
  height: 138rpx;
  vertical-align: middle;
}
.photo-text{
  vertical-align: middle;
  margin-left: 15rpx;
}
/*照片列表*/
.image-list{
  display: flex;
  flex-wrap:wrap;
}
.image-list-item{
  position: relative;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.item-img-close{
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 34rpx;
  height: 34rpx;
}

.image-list-text{
  margin-top: 50rpx;
  margin-left: 15rpx;
}


/* 页面底部按钮 */

.partake{
  box-sizing: border-box;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  background:rgba(255,255,255,0.60);
  padding:23rpx 40rpx;
}
.partake .partake-button{
  background-color: #030001; /*#4a4a4a*/
  color: #fff;
  border-radius:10rpx;
}

.eight{
  display: inline-block;
  width: 42rpx;
  height: 42rpx;
  background-color: #f5a623;
  border-radius:50%;
  font-size: 12px;
  line-height: 42rpx;
}
